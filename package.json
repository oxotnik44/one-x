{
    "name": "one-x",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev:vite": "vite",
        "dev:server": "json-server --watch db.json --port 4000",
        "dev": "concurrently --kill-others \"pnpm dev:vite\" \"pnpm dev:server\"",
        "start": "pnpm dev",
        "type-check": "tsc --noEmit",
        "build": "pnpm type-check && vite build",
        "lint": "eslint --cache --ext .ts,.tsx,.js,.jsx src",
        "lint:fix": "eslint --cache --fix --ext .ts,.tsx,.js,.jsx src",
        "format": "prettier --write .",
        "style": "pnpm format && pnpm lint",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "prepare": "husky install",
        "commit": "pnpm format && pnpm lint:fix && pnpm test && git add . && cz",
        "test": "pnpm test:unit && pnpm test:storybook",
        "test:unit": "vitest run --config vitest.config.unit.ts",
        "test:storybook": "vitest run --config vitest.storybook.config.ts --browser",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@storybook/react": "^9.0.15",
        "@tailwindcss/vite": "^4.1.11",
        "axios": "^1.10.0",
        "bcryptjs": "^3.0.2",
        "clsx": "^2.1.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-hook-form": "^7.60.0",
        "react-hot-toast": "^2.5.2",
        "react-icons": "^5.5.0",
        "react-router-dom": "^7.6.3",
        "tailwind-merge": "^3.3.1",
        "zustand": "^5.0.6"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "4.0.1",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.30.1",
        "@storybook/addon-a11y": "9.0.15",
        "@storybook/addon-docs": "9.0.15",
        "@storybook/addon-onboarding": "9.0.15",
        "@storybook/addon-vitest": "9.0.15",
        "@storybook/react-vite": "9.0.15",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^24.0.10",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@typescript-eslint/eslint-plugin": "^8.35.1",
        "@typescript-eslint/parser": "^8.35.1",
        "@vitejs/plugin-react": "^4.6.0",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "autoprefixer": "^10.4.21",
        "commitizen": "^4.3.1",
        "concurrently": "^9.2.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-storybook": "9.0.15",
        "eslint-plugin-tailwindcss": "^3.18.0",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "json-server": "1.0.0-beta.3",
        "lint-staged": "^16.1.2",
        "playwright": "^1.53.2",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "storybook": "9.0.15",
        "tailwindcss": "^4.1.11",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.35.1",
        "vite": "^7.0.2",
        "vite-plugin-eslint": "^1.8.1",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{json,css,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
